<UserControl x:Class="Snippet4_32.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="White">
        <InkPresenter x:Name="myInkPresenter" Background="Silver" Height="300" Width="300">
            <InkPresenter.Strokes>
                <Stroke>
                    <Stroke.DrawingAttributes>
                        <DrawingAttributes Color="Blue" OutlineColor="Black" Height="4" Width="6" />
                    </Stroke.DrawingAttributes>
                    <Stroke.StylusPoints>
                        <StylusPoint X="10" Y="10" />
                        <StylusPoint X="10" Y="50" />
                    </Stroke.StylusPoints>
                </Stroke>
            </InkPresenter.Strokes>
        </InkPresenter>

    </Grid>
</UserControl>
