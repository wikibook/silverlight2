<UserControl x:Class="Snippet9_4.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Canvas x:Name="LayoutRoot" Background="White">
        <Canvas.Triggers>   
            <EventTrigger RoutedEvent="Canvas.Loaded">
                <BeginStoryboard>
                    <Storyboard x:Name="myStoryboard">
                        <PointAnimation Storyboard.TargetProperty="RenderTransformOrigin" 
                            Storyboard.TargetName="myEllipse" Duration="0:0:1" 
                            From="100,100" To="100,300" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Canvas.Triggers>
        <Ellipse x:Name="myEllipse" Canvas.Top="100" Canvas.Left="100" Stroke="Black" StrokeThickness="2" Height="50" Width="50">
        	<Ellipse.Fill>
        		<RadialGradientBrush>
        			<GradientStop Color="#FFFFFFFF"/>
        			<GradientStop Color="#FFFFFF00" Offset="1"/>
        		</RadialGradientBrush>
        	</Ellipse.Fill>
            
        </Ellipse>
    </Canvas>
</UserControl>
