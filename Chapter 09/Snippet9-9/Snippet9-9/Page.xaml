<UserControl x:Class="Snippet9_9.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Canvas x:Name="LayoutRoot" Background="White">
        <Canvas.Triggers>
            <EventTrigger RoutedEvent="Canvas.Loaded">
                <BeginStoryboard>
                    <Storyboard x:Name="myStoryboard">
                        <DoubleAnimation
                            Storyboard.TargetName="myImage" Storyboard.TargetProperty="Opacity"
                            From=".25" By=".50" Duration="0:0:1" />                    
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Canvas.Triggers>
        <Image x:Name="myImage" Canvas.Top="100" Canvas.Left="100" Source="http://www.silverlightinaction.com/man.png" />
    </Canvas>
</UserControl>
