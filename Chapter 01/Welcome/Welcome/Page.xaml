<UserControl x:Class="Welcome.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="White">
        <Rectangle Height="280" Margin="8,0,8,8" Width="360" Stroke="#FF000000">
    		<Rectangle.Fill>
    			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
    				<GradientStop Color="#FF383737"/>
    				<GradientStop Color="#FF383737" Offset="1"/>
    				<GradientStop Color="#FFB4B4B3" Offset="0.49099999666213989"/>
    			</LinearGradientBrush>
    		</Rectangle.Fill>
    	</Rectangle>
        <MediaElement x:Name="myMediaElement" 
            Margin="20" Height="240" Width="320"
            Source="http://www.silverlightinaction.com/video1.wmv" />
    </Grid>
</UserControl>
