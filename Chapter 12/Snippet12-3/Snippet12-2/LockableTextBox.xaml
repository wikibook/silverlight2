<UserControl x:Class="Snippet12_2.LockableTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <StackPanel x:Name="LayoutRoot" Background="White" Orientation="Horizontal">
        <TextBox x:Name="myTextBox" Height="24" Width="120" />
        <Image x:Name="myImage" Height="24"  Margin="5,0,0,0" Cursor="Hand"  
            MouseLeftButtonUp="myImage_MouseLeftButtonUp"                       
            Source="http://www.silverlightinaction.com/unlocked.png" />
    </StackPanel>
</UserControl>
