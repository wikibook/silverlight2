<UserControl x:Class="Snippet3_16.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid x:Name="myGrid" Height="100" Width="300" ShowGridLines="True" Background="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="68.5"></RowDefinition>
                <RowDefinition Height="12"></RowDefinition>
                <RowDefinition Height="19.5"></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock Text="This row is too tall" />
            <TextBlock Text="This row is too small" Grid.Row="1" />
            <TextBlock Text="This row is just right!" Grid.Row="2" />               
        </Grid>
    </Grid>
</UserControl>
