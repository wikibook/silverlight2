<UserControl x:Class="Snippet3_36.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel Orientation="Horizontal">
            <StackPanel Width="200" Background="LightGray">
                <TextBox HorizontalAlignment="Left"></TextBox> 
                <TextBox HorizontalAlignment="Center"></TextBox>
                <TextBox HorizontalAlignment="Right"></TextBox> 
                <TextBox HorizontalAlignment="Stretch"></TextBox> 
            </StackPanel>
            <Canvas Width="20"></Canvas>
            <StackPanel Width="200" Background="LightGray" Orientation="Horizontal">
                <TextBox VerticalAlignment="Top"></TextBox> 
                <TextBox VerticalAlignment="Center"></TextBox> 
                <TextBox VerticalAlignment="Bottom"></TextBox> 
                <TextBox VerticalAlignment="Stretch"></TextBox> 
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
