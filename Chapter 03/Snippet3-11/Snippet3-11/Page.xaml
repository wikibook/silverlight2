<UserControl x:Class="Snippet3_11.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid x:Name="myGrid" ShowGridLines="True" Background="LightGray" Width="310" Height="75">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock Text="Please enter your name and email address." Grid.ColumnSpan="2"></TextBlock> 
            <TextBlock Text="Name: " Grid.Row="1"></TextBlock> 
            <TextBlock Text="Email Address: " Grid.Row="2"></TextBlock> 

            <TextBox Width="150" Grid.Column="1" Grid.Row="1"></TextBox>
            <TextBox Width="150" Grid.Column="1" Grid.Row="2"></TextBox>
        </Grid>
    </Grid>
</UserControl>
